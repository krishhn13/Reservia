<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reservia - My Bookings</title>
    <link rel="stylesheet" href="/css/orders.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel = "shortcut icon" href ="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSU5zQzIc0nbzV04ns-mz3q7PwWJUYHLyHyQA&s" type = "image/x-icon">
    
</head>
<body>
    <div class="container">
        <div class="orders-box">
            <div class="logo-container">
                <div class="logo">
                    <span> R </span>
                </div>
            </div>
            <h1>Your Bookings</h1>
            <p class="tagline">Review your reservations below</p>
            <div id="orders-container">
                <!-- Bookings will be dynamically loaded here -->
            </div>
        </div>
    </div>
    <script>
        // Fetch bookings for the logged-in user
        fetch('/bookings')
            .then(response => response.json())
            .then(data => {
                const ordersContainer = document.getElementById('orders-container');
                if (data.length === 0) {
                    ordersContainer.innerHTML = '<p>No bookings found. Make your first reservation!</p>';
                    return;
                }
                data.forEach(booking => {
                    const bookingCard = `
                        <div class="order-card">
                            <h2>${booking.restaurantName}</h2>
                            <p><strong>Date:</strong> ${booking.date}</p>
                            <p><strong>Time:</strong> ${booking.time}</p>
                            <p><strong>Guests:</strong> ${booking.guests}</p>
                        </div>
                    `;
                    ordersContainer.innerHTML += bookingCard;
                });
            })
            .catch(error => console.error('Error fetching bookings:', error));
    </script>
</body>
</html>
