<style>
        .contact-container {
                display: flex;
                flex-wrap: wrap;
                width: 100%;
                max-width: 750px;
                max-height: 2000px;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                background-color: #ffffff;
                border-radius: 8px;
                margin-top : 4%;
                margin-left : 27%;
                overflow: hidden;
        }

        .other-content {
                padding-bottom: 100px; 
        }

        .contact-form {
                flex: 1;
                padding: 35px;
        }

        .contact-form h1 {
                font-family: 'Libre Baskerville', serif;
                font-size: 36px;
                margin-bottom: 10px;
        }

        .contact-form p {
                margin-bottom: 30px;
                color: #666;
                font-family: 'Crimson Text', serif;
        }

        .contact-form input, .contact-form textarea {
                width: 100%;
                margin-bottom: 15px;
                padding: 10px;
                border: 1px solid #ddd;
                font-size: 16px;
                border-radius: 4px; 
        }

        .contact-form input[type = "date"] {
                width: calc(50% - 10px); 
                margin-right: 10px; 
        }

        .contact-form textarea {
                height: 60px;
                resize: vertical;
        }

        .contact-form button {
                width: 120px; 
                padding: 10px;
                cursor: pointer;
                background-color: white;
                color: black; 
                border: 2px solid black;
                border-radius: 4px; 
                transition: background-color 0.3s, color 0.3s; 
        }

        .contact-form button:hover {
                background-color: black;
                color: white; 
        }

        .contact-image {
                flex: 1;
                background-color: #000000;
                display: flex;
                align-items: center;
                justify-content: center;
        }

        .contact-image img {
                width: 100%;
                height: 100%;
                object-fit: cover; 
        }
</style>
